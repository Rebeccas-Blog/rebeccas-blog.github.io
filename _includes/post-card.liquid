<div class="col-md-6 col-lg-4 mb-4">
  <div class="card animal-card h-100">
    {% if post.data.image %}
    <div class="card-img-container">
      <img src="{{ post.data.image }}" class="card-img-top" alt="{{ post.data.title }}">
    </div>
    {% endif %}
    <div class="card-body">
      <h3 class="card-title h5">{{ post.data.title }}</h3>
      <div class="card-meta">
        <span class="post-date small"><i class="bi bi-calendar3"></i> {{ post.data.date | readableDate }}</span>
      </div>
      <p class="card-text">{{ post.data.excerpt }}</p>
      <div class="d-flex justify-content-between align-items-center">
        <a href="{{ post.url }}" class="btn btn-primary">Read More</a>
        {% if post.data.tags.size > 0 %}
        <div>
          {% for tag in post.data.tags %}
            {% if tag != "posts" %}
            <a href="/tags/{{ tag }}/" class="badge animal-tag">{{ tag | capitalize }}</a>
            {% endif %}
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>