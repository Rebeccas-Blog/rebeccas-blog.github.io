---
layout: base
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: "Animals tagged with '{{ tag | capitalize }}'"
---

<div class="container mt-4">
  <div class="row mb-4">
    <div class="col">
      <h1 class="page-title">{{ tag | capitalize }} <span class="highlight">Animals</span></h1>
    </div>
  </div>

  <div class="row">
    {% assign posts = collections[tag] | reverse %}
    {% for post in posts %}
      {% include "post-card.liquid" %}
    {% endfor %}
  </div>
</div>
